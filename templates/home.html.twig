<head>
    <meta charset="UTF-8">
    <title>Морски шах</title>
    <link rel="stylesheet"  type="text/css" href="./assets/style.css"/>
    <link rel="stylesheet" type="text/css" href="./assets/bootstrap.min.css"/>
</head>

<body>
   {{ include ('LoginNav.html.twig') }}
<form method="post">
    <div class="welcome">
        <h1>Start playing Tic Tac Toe!</h1>
        <h2>Please fill in your game names</h2>
        <div class="player-name">
            <input  type="text" name="player-x" placeholder="First player (X)" required/>
        </div>
        <div class="player-name">
            <input  type="text" id="player-o" name="player-o" placeholder="Second player (O)"/>
        </div>
        <button type='submit' id='singleGame' name="singleGame"  value='1' class='btn btn-primary'>SingleGame</button>
        <button type="submit" id='multyGame' name="multyGame"  value="2"  class='btn btn-primary'>MultyGame</button>
    </div>
</form>
<script src="/js/bootstrap.min.js" type="text/javascript"></script>
</body>

